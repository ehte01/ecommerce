<% layout('layout/boilerplate') -%>


<div class="row container">
    <div class="col-md-6 col-lg-3 mt-3">

        <div class="card" style="width: 18rem;">
            <img src="<%= product.img  %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= product.name  %></h5>
              <p class="card-text"><%= product.desc  %>.</p>
              <h5>Rs. <%= product.price  %></h5>
              <a href="#" class="btn btn-primary">Add to Cart</a>
              <a href="/products/<%= product._id %>/edit" class="btn btn-secondary">Edit</a>
              <form action="/products/<%= product._id %>?_method=DELETE" method="post" class="mt-2" id="delBut">
                <button type="submit" class="border-0 bg-transparent"><i class="fa-solid fa-trash-can"></i></button>
              </form>
            </div>
          </div>
          <div style="width:50%;">
            <h1>Add a Review</h1>
            <div class="mb-3">
                <form action="/products/<%=product._id%>/review" method="post">
                    <div class="mb-3">
                      <label for="rating" class="form-label">Rating</label>
                        <input type="range" name="rating" id="rating" class="form-control" min="0" max="5" step="1">
                    </div>
                    <div class="mb-3">
                      <label for="rating" class="form-label">Comment</label>
                        <textarea class="form-control" name="comment" id="commment" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-sm btn-success">Add a review </button>
                </form>
              </div>
              <div class="mb-3">
                <% for(let review of product.reviews){ %>
                    <div style="height:150px;" class="card mb-1">
                        <div class="card-body">
                            <p>Rating : <%=review.rating%></p>
                            <p><%=review.comment%></p>
                            <form action="/products/<%= product._id %>/<%= review._id %>?_method=DELETE" method="post">
                              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>                      
                        </div>
                      </div>
                <% } %>  
            </div>
    </div>
</div>